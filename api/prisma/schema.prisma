// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  MASTER
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  events    Event[]

  @@map("users")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  date        String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  createdByUserId Int
  createdByName   String
  
  user        User     @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@map("events")
}

enum JobStatus {
  pending
  running
  planner
  generator
  healer
  completed
  failed
}

model Job {
  id         String    @id @default(uuid())
  url        String
  objective  String
  routes     String[]  @default([])
  status     JobStatus @default(pending)
  
  // Phase info stored as JSON
  phaseName       String  @default("initializing")
  phasePercentage Int     @default(0)
  phaseLogs       String[] @default([])
  
  // Login info stored as JSON
  loginUrl            String?
  loginUsername       String?
  loginPassword       String?
  loginUsernameSelector String?
  loginPasswordSelector String?
  loginSubmitSelector   String?
  
  // Artifacts stored as JSON
  testPlanArtifact String?  // JSON string
  testsArtifact    String?  // JSON string
  
  error      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("jobs")
}

model TestVersion {
  id         Int      @id @default(autoincrement())
  testId     String
  version    Int
  definition String   // JSON string of TestDefinition
  createdAt  DateTime @default(now())
  
  @@unique([testId, version])
  @@map("test_versions")
}

model Test {
  id          String   @id
  identifier  String   @unique
  name        String
  baseURL     String
  
  // Stored as JSON
  steps       String
  variables   String   // JSON object
  artifacts   String?  // JSON object
  
  // Last run info (optional)
  lastRunStatus         String?  // "passed" | "failed" | "running" | null
  lastRunStartedAt      DateTime?
  lastRunFinishedAt     DateTime?
  lastRunDurationMs     Int?
  lastRunStepsTotal     Int?
  lastRunStepsCompleted Int?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  runs        TestRun[]

  @@map("tests")
}

model TestRun {
  id          String   @id @default(uuid())
  testId      String
  test        Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  
  status      String   // "passed" | "failed" | "running" | "queued"
  startedAt   DateTime
  finishedAt  DateTime
  durationMs  Int      @default(0)
  stepsTotal  Int      @default(0)
  stepsCompleted Int   @default(0)
  
  // Execution details
  stepResults String?  // JSON array of StepResult
  errorMessage String?
  failedStepIndex Int?
  failedStep  String?  // JSON of Step
  
  // Artifacts
  artifacts   String?  // JSON object with paths
  logs        String?  // JSON array
  
  createdAt   DateTime @default(now())

  @@map("test_runs")
}

model RunReport {
  id        String   @id @default(uuid())
  kind      String   // "single" | "batch"
  createdAt DateTime @default(now())
  finishedAt DateTime
  
  // Tests entries stored as JSON
  tests     String   // JSON array of TestRunReportEntry

  @@map("run_reports")
}
